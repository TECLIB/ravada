{
  "name": "ravada",
  "version": "2.0.0",
  "description": "Remote Virtual Desktops Manager",
  "sasslintConfig": ".sass-lint.yml",
  "scripts": {
    "start": "bundle exec jekyll serve",
    "build": "bundle exec jekyll build",
    "install": "bundle install",
    "test-sass": "./node_modules/.bin/sass-lint -c .sass-lint.yml -v -q",
    "test-sass-winstrap": "./node_modules/.bin/sass-lint -c _sass/3_level_generic/winstrap/.sass-lint.yml -v -q",
    "test-js": "./node_modules/.bin/eslint **/*.js --fix",
    "test-yaml": "ci/yamllint.sh",
    "test": "npm run test-sass & test-sass-winstrap & npm run test-js & npm run test-yaml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UPC/ravada.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/UPC/ravada/issues"
  },
  "homepage": "https://ravada.upc.edu/",
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "sass-lint": "^1.12.1",
    "yaml-lint": "^1.0.0"
  }
}
